<%= form_for(@comment) do |f| %>
    <%= render 'error_messages' %>

    <%= hidden_field_tag(:post_id, @comment.post_id) %>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label"><%= f.label :content, "Content: " %><br></label>
        <div class="col-sm-10">
            <%= f.text_area :content, maxlenght: 250, size: "50x20", placeholder: "Type the post text here" %><br>
        </div>
    </div>

    <button type="submit" class="btn btn-primary btn-lg float-right">Publish</button>
<% end %>