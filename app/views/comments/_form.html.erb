<%= form_for @comment do |f| %>
    <%= render 'error_messages' %>

    <%= hidden_field_tag(:post_id, @post_id, "data-behavior": "comments_comment") %>
    <%= hidden_field_tag(:user_id, current_user.id, "data-behavior": "comments_comment") %>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label"><%= f.label :content, "Content: " %><br></label>
        <div class="col-sm-10">
            <%= f.text_area :content, maxlenght: 250, size: "50x3", placeholder: "Type the post text here", "data-behavior": "comments_comment" %><br>
        </div>
    </div>
    
    <button type="submit" class="btn btn-primary btn-lg float-right">Publish</button>
<% end %>