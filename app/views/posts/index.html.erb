<div class="container">
    <% @posts.each do |post| %>
        <div class="card bg-light">
            <div class="card-title">
                <h1 class="display-3 m-5 p-2 text-center"><%= link_to post.title, controller: "posts", action: "show", id: post.id %></h1>
            </div>
            <div class="card-body">
                <p class="text-justify"><%= post.content %></p>
            </div>
            
            <div class="card-footer">
                <p class="float-left">Posted by: <strong><%= User.find(post.user_id).email %></strong></p>
            </div>
        </div>
    <% end %>
    <br><br>
    <% if user_signed_in? %>
        <%= link_to '<button class="btn btn-primary btn-lg btn-block">Create a post</button>'.html_safe, controller: "posts", action: "new"%>
    <% end %>
</div>